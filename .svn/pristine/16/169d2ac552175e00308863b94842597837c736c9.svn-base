    //t1.confId, t1.sysName, t1.hostName, t1.indexTyp, t1.predIndexName, t1.confDesc, t1.confLowValue, t1.confMidValue, t1.confHighValue, t2.ruleId, t2.confId, t3.ruleName, t3.rule, t3.alarmLevel
